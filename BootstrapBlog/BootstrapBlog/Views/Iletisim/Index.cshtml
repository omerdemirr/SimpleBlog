@{
    ViewBag.Title = "İletişim";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="row">
    <div class="col-md-8 blog-main">
        <h3 class="pb-3 mb-4 font-italic border-bottom">
            İletişim
        </h3>
        <div>
            <form>
                <div class="form-group  row">
                    <div class="col-md-3">
                        <label>Adı Soyadı</label>
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control" placeholder="Adı Soyadı">
                    </div>
                </div>

                <div class="form-group  row">
                    <div class="col-md-3">
                        <label>Telefon</label>
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="+90">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <label>Email</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" maxlength="15" class="form-control" placeholder="Email">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <label>Mesajınız</label>
                    </div>
                    <div class="col-md-9">
                        <textarea class="form-control" rows="4" placeholder="Mesajınız"></textarea>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Gönder</button>
                <button type="reset" class="btn btn-danger">Temizle</button>

            </form>
        </div>
        <div>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3059.819473370313!2d32.8480999505619!3d39.9230559793246!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d34efe29bf5391%3A0x9ab376d03bd3a247!2zS8SxesSxbGF5IE1haGFsbGVzaSwgRmV2emkgw4dha21hay0xIFNrLiBObzoyMSwgMDY0MjAgw4dhbmtheWEvQW5rYXJh!5e0!3m2!1str!2str!4v1526211324008" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
    </div>
    <aside class="col-md-4 blog-sidebar">
        <div class="p-3 mb-3 bg-light rounded">
            <h4 class="font-italic">İletişim Bilgileri;</h4>
            <p class="mb-0">
                GMK Bulvarı Fevzi Çakmak 1 Sok. No:24/5 Kat: 2 Kızılay / Ankara
            </p>
        </div>
    </aside>
</div>
